{
  "id": "kafka-control-center",
  "cpus": 0.5,
  "mem": 1024,
  "instances": 1,
  "container":{
    "type" : "DOCKER",
    "docker": {
      "image" : "docker.jangl.com/confluent-control-center",
      "forcePullImage": true,
      "network": "BRIDGE",
      "portMappings": [
        {"containerPort": 0, "protocol": "tcp"}
      ]
    }
  },
  "env": {
    "CONTROL_CENTER_BOOTSTRAP_SERVERS": "10.128.9.61:9092,10.128.9.39:9092,10.128.9.98:9092",
    "CONTROL_CENTER_ZOOKEEPER_CONNECT": "10.128.9.253:2181,10.128.9.176:2181,10.128.9.125:2181",
    "SERVICE_IGNORE": "true"
  }
}
